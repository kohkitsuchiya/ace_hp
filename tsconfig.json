{
    "compilerOptions": {
      // ソースマップを有効化
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "target": "ES2015",
      // TSのモジュールはES Modulesとして出力
      "module": "ES2015",
      // 厳密モードとして設定
      "strict": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "lib": [
        "ES2020",
        "DOM"
      ]
  }
}